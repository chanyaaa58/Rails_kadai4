<h1>お気に入り一覧</h1>
<table>
  <tr>
    <th>Photo by</th>
    <th>Content</th>
    <th>Photo</th>
    <th>Menu</th>
  </tr>
<% @favorite.each do |favorite| %>
  <tr>
    <td><%= favorite.picture.user.name %></td>
    <td><%= favorite.picture.content %></td>
    <td><%= image_tag favorite.picture.image.url, size: '320x240' if favorite.picture.image && favorite.picture.image.url %></td>
    <td><%= link_to "read more", picture_path(favorite.picture.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to "投稿一覧に戻る", pictures_path %>