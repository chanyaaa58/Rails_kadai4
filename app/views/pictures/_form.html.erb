<div class="main pictures-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with(model: @picture, local: true) do |form| %>
      <div class="form">
        <div class="form-body">
          <% @picture.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="field">
            <%= form.label :content %>
            <%= form.text_area :content %>
          </div>

          <%= form.submit "投稿" %>
  　　   </div>
      </div>
    <% end %>
  </div>
</div>