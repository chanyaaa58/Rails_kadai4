<!DOCTYPE html>
<html>
  <head>
    <title>InstaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <div class="header-logo">
    <%= link_to("InstaApp","/top") %>
  </div>
  <ul class="header-menus">
    <li>
      <%= link_to("InstaAppとは","/about") %>　
    </li>
    <li>
      <%= link_to("投稿一覧","/pictures") %>　
    </li>
    <li>
      <%= link_to("新規投稿","/pictures/new") %>
    </li>
  </ul>
　</header>
  <% if flash[:notice] %>
    <div class="flash">
  <%=flash[:notice] %>
  </div>
  <% end %>
  <%= yield %>
  </body>
</html>
